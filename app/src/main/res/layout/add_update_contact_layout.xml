<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#060D27"
    app:cardElevation="52dp"
    app:cardCornerRadius="0dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="25sp"
        android:background="#041143"
        android:textStyle="bold"
        android:textColor="#FFFAFA"
        android:gravity="center"
        android:id="@+id/addUpdateHeading"
        android:text="Add Contact" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:background="#DCD7D7"
        android:layout_marginTop="120dp"
        android:layout_marginStart="35dp"
        android:textColorHint="#404040"
        android:hint="  Full Name"
        android:id="@+id/NewName"
        android:textColor="#404040"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:background="#DCD7D7"
        android:layout_marginTop="170dp"
        android:layout_marginStart="35dp"
        android:textColorHint="#404040"
        android:hint="  Contact No."
        android:textColor="#404040"
        android:id="@+id/NewContactNo"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SaveNewContact"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:backgroundTint="#301F4E" />
    



</androidx.cardview.widget.CardView>